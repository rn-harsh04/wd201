<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>
    <link rel="stylesheet" href="./css/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        async function addTodo() {
            const title = document.getElementById('title').value;
            const dueDate = document.getElementById('dueDate').value;

            try {
                const response = await fetch('/todos', {
                    method: 'POST',
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ title, dueDate })
                });
                if (response.ok) {
                    window.location.reload();
                }
            } catch (error) {
                console.error("Error adding todo:", error);
            }
        }

        async function updateTodo(id) {
            try {
                const response = await fetch(`/todos/${id}/markAsCompleted`, {
                    method: 'PUT',
                    headers: { "Content-Type": "application/json" }
                });
                if (response.ok) {
                    window.location.reload();
                }
            } catch (error) {
                console.error("Error updating todo:", error);
            }
        }

        async function deleteTodo(id) {
            try {
                const response = await fetch(`/todos/${id}`, {
                    method: 'DELETE',
                    headers: { "Content-Type": "application/json" }
                });
                if (response.ok) {
                    window.location.reload();
                }
            } catch (error) {
                console.error("Error deleting todo:", error);
            }
        }
    </script>
</head>
<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <%- include('header.ejs') %>
            <form onsubmit="event.preventDefault(); addTodo();">
                <!-- form for adding todos-->
                <div class="flex space-x-2">
                    <input type="text" id="title" class="w-full px-2 py-1 rounded border border-gray-300" placeholder="Add a new todo" required>
                    <input type="date" id="dueDate" class="w-full px-2 py-1 rounded border border-gray-300" required>
                    <button type="submit" class="px-4 py-2 rounded bg-blue-500 text-white">Add</button>
                </div>
            </form>
            <%- include('todos.ejs', { overdueTodos, dueTodayTodos, dueLaterTodos }) %>
            <%- include('footer.ejs') %>
        </div>
    </div>
</body>
</html>
